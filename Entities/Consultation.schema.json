{
  "name": "Consultation",
  "type": "object",
  "properties": {
    "patient_name": {
      "type": "string",
      "description": "Nome do paciente"
    },
    "patient_age": {
      "type": "number",
      "description": "Idade do paciente"
    },
    "patient_gender": {
      "type": "string",
      "enum": [
        "masculino",
        "feminino",
        "outro"
      ],
      "description": "Gênero do paciente"
    },
    "patient_phone": {
      "type": "string",
      "description": "Telefone do paciente"
    },
    "patient_email": {
      "type": "string",
      "description": "Email do paciente"
    },
    "chief_complaint": {
      "type": "string",
      "description": "Queixa principal"
    },
    "symptoms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Lista de sintomas relatados"
    },
    "medical_history": {
      "type": "string",
      "description": "Histórico médico"
    },
    "current_medications": {
      "type": "string",
      "description": "Medicações em uso"
    },
    "family_history": {
      "type": "string",
      "description": "Histórico familiar"
    },
    "chat_messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "user",
              "assistant"
            ]
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Histórico de mensagens do chat"
    },
    "suggested_diagnoses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "diagnosis": {
            "type": "string"
          },
          "confidence": {
            "type": "number"
          },
          "reasoning": {
            "type": "string"
          }
        }
      },
      "description": "Sugestões de diagnóstico"
    },
    "refining_questions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Perguntas para refinar o diagnóstico"
    },
    "suggested_exams": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "exam": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "alta",
              "media",
              "baixa"
            ]
          }
        }
      },
      "description": "Exames sugeridos"
    },
    "symptoms_summary": {
      "type": "string",
      "description": "Resumo estruturado dos sintomas"
    },
    "recommendations": {
      "type": "string",
      "description": "Recomendações médicas"
    },
    "status": {
      "type": "string",
      "enum": [
        "em_andamento",
        "concluida",
        "revisao",
        "aguardando_exames",
        "alta"
      ],
      "default": "em_andamento",
      "description": "Status da consulta"
    },
    "doctor_notes": {
      "type": "string",
      "description": "Anotações do médico"
    },
    "urgency_level": {
      "type": "string",
      "enum": [
        "baixa",
        "media",
        "alta",
        "urgente"
      ],
      "default": "media",
      "description": "Nível de urgência"
    },
    "follow_up_chat": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "user",
              "assistant"
            ]
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Chat de acompanhamento com o médico"
    }
  },
  "required": [
    "patient_name"
  ]
}
